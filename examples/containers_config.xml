<?xml version="1.0" encoding="UTF-8"?>
<containers>
    <!-- Контейнер с примитивными типами -->
    <container id="0x1001" name="sensor_data_container" size="256">
        <variable name="temperature" type="float"/>
        <variable name="humidity" type="float"/>
        <variable name="pressure" type="int32_t"/>
        <variable name="is_active" type="bool"/>
        <variable name="device_id" type="uint32_t"/>
        <variable name="status_message" type="char" array="true" elements="1" element_size="128"/>
    </container>

    <!-- Контейнер с массивами данных -->
    <container id="0x1002" name="sensor_array_container" size="1024">
        <variable name="temperature_readings" type="float" array="true" elements="64"/>
        <variable name="humidity_readings" type="float" array="true" elements="64"/>
        <variable name="timestamps" type="int64_t" array="true" elements="64"/>
    </container>

    <!-- Контейнер для IPC коммуникации -->
    <container id="0x1003" name="ipc_command_container" size="512">
        <variable name="command_id" type="int32_t"/>
        <variable name="command_data" type="char" array="true" elements="1" element_size="256"/>
        <variable name="response_code" type="int32_t"/>
        <variable name="checksum" type="uint32_t"/>
    </container>

    <!-- Контейнер для системного мониторинга -->
    <container id="0x1004" name="system_stats_container" size="1024">
        <variable name="cpu_usage" type="float"/>
        <variable name="memory_usage" type="float"/>
        <variable name="disk_usage" type="float"/>
        <variable name="network_rx" type="uint64_t"/>
        <variable name="network_tx" type="uint64_t"/>
        <variable name="uptime" type="uint64_t"/>
        <variable name="process_count" type="int32_t"/>
    </container>
</containers>